#include <unistd.h>
#include <stdio.h>
#include <sys/types.h>

int main()
{
    pid_t pid;
    pid = fork();

    if (pid < 0) {
        printf("Fork failed!\n");
        return 1;
    }

    if (pid == 0) {
        // Child process
        printf("I'm a child process. My ID is %d\n", getpid());
        printf("My parent ID is %d\n", getppid());
    } 
    else {
        // Parent process
        sleep(5);
        printf("I'm a parent process. My ID is %d\n", getpid());
        printf("My child's ID is %d\n", pid);
    }

    return 0;
}
